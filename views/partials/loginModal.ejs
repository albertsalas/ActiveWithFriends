

<div class="modal loginModal" >
  <div class="modal-background is-black" ></div>
  <div class="modal-card">
    <header class="modal-card-head" style="text-align: center; background-color: rgb(32, 197, 181); border-bottom: 0;">
      <p class="modal-card-title" style="font-size: 2em; color: white;">Login</p>
    </header>
    <section class="modal-card-body" style=" background-image: linear-gradient(45deg,#00ada7 50%,#2cbbb7 50%);">
      <!-- POST FORM -->
      <!-- <form action="/signup" method="post"> -->
        <form action="./login" method="POST">

        <!-- USER NAME -->
        <div class="field" id="">
          <p class="control has-icons-left has-icons-right">
            <input class="input" type="username" name="username" placeholder="User Name">

          </p>
        </div>
        <!-- PASSWORD -->
        <div class="field">
          <p class="control has-icons-left">
            <input class="input" type="password" name="password" placeholder="Password" id="p2">
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
          <p class="help is-success"></p>
        </div>
        <!-- CHECK BOX -->
        <label class="checkbox">
          <input type="checkbox">
          I agree to the <a href="#">terms and conditions</a>
        </label>
        <br> <br>
        <div class="columns is-centered is-mobile">
          <button class="button is-white is-outlined" id="loginBtn"><strong>Login</strong></button>
        </div>
      </form>   
    </section>
  </div>
</div>
      
     
